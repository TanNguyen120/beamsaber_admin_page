<!-- Editable table -->
<div class='card'>
  <h3 class='card-header text-center font-weight-bold text-uppercase py-4'>
    ALL ACCOUNTS TABLE
  </h3>
  <div class='card-body'>
    <div id='table_account' class='table-editable'>
      <span class='table-add float-right mb-3 mr-2'><a
          href='#!'
          class='text-success'
        ><i class='fas fa-plus fa-2x' aria-hidden='true'></i></a></span>
      <table
        class='table table-bordered table-responsive-md table-striped text-center'
      >
        <thead>
          <tr>
            <th class='text-center'>Account id</th>
            <th class='text-center'>Account Name</th>
            <th class='text-center'>Email</th>
            <th class='text-center'>Password</th>
            <th class='text-center'>Phone</th>
            <th class='text-center'>Address</th>
            <th class='text-center'>Bank Account</th>
            <th class='text-center'>Role</th>
            <th class='text-center'>Account status</th>
            <th class='text-center'>Edit</th>
            <th class='text-center'>Remove</th>

          </tr>
        </thead>
        <tbody>
          {{#each listOfAccounts}}
            <tr>
              <td
                class='pt-3-half idCell'
                contenteditable='false'
              >{{user_id}}</td>
              <td class='pt-3-half' contenteditable='false'>{{name}}</td>
              <td class='pt-3-half' contenteditable='false'>{{email}}</td>
              <td class='pt-3-half' contenteditable='false'>{{password}}</td>
              <td class='pt-3-half' contenteditable='false'>{{phone}}</td>
              <td class='pt-3-half' contenteditable='false'>{{address}}</td>
              <td
                class='pt-3-half'
                contenteditable='false'
              >{{bank_account}}</td>
              <td class='pt-3-half' contenteditable='false'>{{role}}</td>
              <td
                class='pt-3-half'
                contenteditable='true'
              >{{account_status}}</td>
              <td class='table-warning'>
                <span class='table-edit'><button
                    type='button'
                    class='btn-warning btn-rounded account-edit'
                  >
                    <i class='bi bi-pencil-square'></i>
                  </button>
                </span>
              </td>
              <td class='table-danger'>
                <span class='table-remove'><button
                    type='button'
                    class='btn-danger btn-rounded account-delete'
                  >
                    <i class='bi-trash'></i>
                  </button>
                </span>
              </td>
            </tr>
          {{/each}}
          <div class='pagination clearfix style2' style='margin:10px'>
            <div class='nav-link'>
              <div class='page-numbers' id='prev_page'><i
                  class='icon fa fa-angle-left'
                  aria-hidden='true'
                ></i>
              </div>
              <!-- Page Number Here /-->
              <a href='?page=1' class='page-numbers'>1</a>
              <a href='?page=2' class='page-numbers'>2</a>
              <a href='?page=3' class='page-numbers'>3</a>
              <a href='?page=4' class='page-numbers'>4</a>
              <a href='?page=5' class='page-numbers'>5</a>
              <div class='page-numbers' id='next_page'><i
                  class='icon fa fa-angle-right'
                  aria-hidden='false'
                ></i>
              </div>
              <div id='currpageVar' style='display: none'> {{pagePass}} </div>
            </div>
          </div>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- Editable table -->