<div class="main-content main-content-login">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="breadcrumb-trail breadcrumbs">
          <ul class="trail-items breadcrumb">
            <li class="trail-item trail-begin">
              <a href="/">Home</a>
            </li>
            <li class="trail-item trail-end active">
              {{user.user_name}}
              Profile
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container rounded bg-white mt-5 mb-5">
      <div class="row">
        <div class="col-md-3 border-right" >
          <div
            class="d-flex flex-column align-items-center text-center p-3 py-5"
          ><img
              class="rounded-circle mt-5"
              width="150px"
              src="\assets\beam_saber_images\user_avatar.jpg"
            /><span class="font-weight-bold">{{userProfile.name}} | </span><span
              class="text-black-50"
            >{{userProfile.email}}</span></div>
        </div>
        <div class="col-md-5 border-right" id="profile_contend">
          <form method="POST">
            <div class="p-3 py-5">
              <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="text-right">Admin Profile Settings</h4>
              </div>
              <div class="row mt-2">
                <div class="col-md-12"><label class="labels">User Name</label><input
                    type="text"
                    class="form-control"
                    placeholder="user name"
                    value="{{userProfile.name}}"
                    readonly
                  /></div>
              </div>
              <div class="row mt-3">
                <div class="col-md-12"><label class="labels">Mobile Number</label><input
                    type="text"
                    class="form-control"
                    placeholder="enter phone number"
                    value="{{userProfile.phone}}"
                    name = "phone"
                  /></div>
                <div class="col-md-12"><label class="labels">Address</label><input
                    type="text"
                    class="form-control"
                    placeholder="enter full address "
                    value="{{userProfile.address}}"
                    name="address"
                  /></div>
                <div class="col-md-12"><label class="labels">Bank Or Credit Number</label><input
                    type="text"
                    class="form-control"
                    placeholder="enter number"
                    value="{{userProfile.bank_account}}"
                    name = "bankAccount"
                  /></div>
                <div class="col-md-12"><label class="labels">Email</label><input
                    type="text"
                    class="form-control"
                    placeholder="enter email id"
                    value="{{userProfile.email}}"
                    readonly
                  /></div>
              </div>
              <div class="mt-5 text-center"><button
                  class="btn-submit"
                  type="submits"
                >Edit Profile</button></div>
            </form>
          </div>
        </div>
